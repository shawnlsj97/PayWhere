<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FeedbackActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/feedback_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:title="Send Us Your Feedback!"
                app:titleTextColor="@color/white"
                android:elevation="4dp"
                android:theme="@style/ToolbarTheme"
                android:background="@color/colorPrimary">
            </androidx.appcompat.widget.Toolbar>

            <ImageView
                android:id="@+id/feedback_img"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:layout_constraintTop_toBottomOf="@id/feedback_toolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                android:src="@drawable/onboarding_logo"/>

            <EditText
                android:id="@+id/feedback_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/feedback_img"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="16dp"
                android:hint="Subject"
                android:textSize="20dp"
                android:gravity="start|top"/>

            <View
                android:id="@+id/subject_msg_separator"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                app:layout_constraintTop_toBottomOf="@id/feedback_subject"
                app:layout_constraintBottom_toTopOf="@id/feedback_msg"
                android:layout_marginTop="8dp"
                android:background="@color/colorPrimary"/>

            <EditText
                android:id="@+id/feedback_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/subject_msg_separator"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="16dp"
                android:hint="Message"
                android:textSize="20dp"
                android:lines="5"
                android:gravity="start|top"/>

            <View
                android:id="@+id/msg_btn_separator"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                app:layout_constraintTop_toBottomOf="@id/feedback_msg"
                app:layout_constraintBottom_toTopOf="@id/send_btn"
                android:layout_marginTop="8dp"
                android:background="@color/colorPrimary"/>

            <Button
                android:id="@+id/send_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/msg_btn_separator"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                android:text="Send Feedback!"
                android:textColor="@color/white"
                android:background="@drawable/get_started_btn_style"
                android:padding="10sp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>