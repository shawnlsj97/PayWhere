<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:drawable="@color/colorPrimary" />
    <item
        android:left="270px"
        android:right="400px"
        android:top="850px"
        android:bottom="1200px">
        <rotate
            android:fromDegrees="10"
            android:toDegrees="10">
            <bitmap android:src="@drawable/paywhere_text"/>
        </rotate>
    </item>
    <item
        android:width="150px"
        android:height="150px"
        android:left="1050px"
        android:top="930px">
        <rotate
            android:fromDegrees="10"
            android:toDegrees="10">
            <bitmap
                android:src="@drawable/white_location_pin" />
        </rotate>
    </item>
    <item
        android:top="1000px"
        android:left="-500px">
        <rotate
            android:fromDegrees="10"
            android:toDegrees="10">
            <shape
                android:shape="rectangle">
                <solid
                    android:color="@color/colorPrimaryDark">
                </solid>
            </shape>
        </rotate>
    </item>
    <item
        android:top="1600px"
        android:bottom="-800px"
        android:right="-500px">
        <rotate
            android:fromDegrees="-16"
            android:toDegrees="-16">
            <shape
                android:shape="rectangle">
                <solid
                    android:color="@color/colorPrimaryLight">
                </solid>
                <size
                    android:width="100px"
                    android:height="200px">
                </size>
            </shape>
        </rotate>
    </item>
</layer-list>